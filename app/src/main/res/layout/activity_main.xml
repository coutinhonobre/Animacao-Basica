<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="animation.xyz.animation.MainActivity">

    <Button
        android:id="@+id/android1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Inside Android" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/android1"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="340dp"
        android:layout_toStartOf="@+id/imageView2"
        android:visibility="gone"
        app:srcCompat="@drawable/iconfinder_balloon_3938183" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/android1"
        android:layout_alignEnd="@+id/android1"
        android:layout_marginTop="-387dp"
        android:layout_marginEnd="64dp"
        android:visibility="gone"
        app:srcCompat="@drawable/iconfinder_balloons__celebrations__balloon__3653408" />
</RelativeLayout>
